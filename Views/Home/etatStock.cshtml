<div
  class="box-root padding-top--24 flex-flex flex-direction--column"
  style="flex-grow: 1; z-index: 9"
>
    <div class="box-root padding-top--48 padding-bottom--24 flex-flex flex-justifyContent--center">
        <h1>
            <a href="" rel="dofollow">Etat de Stock </a>
        </h1>
       
    </div>
       <div class="table-container">
           <div id="head">
             <div id="labels">
                <p>
                    Date 1: 
                </p>
                <p>
                    Date 2:
                </p>
                <p>
                    Magasin:
                </p>
            </div>
            <div id="values">
                <p>
                    @ViewBag.etatStock.Date1()
                </p>
                <p>
                    @ViewBag.etatStock.Date2()
                </p>
                <p>
                     @ViewBag.etatStock.magasin.nomMagasin
                </p>
            </div>
           </div>
         <table id="table" >
            <thead>
                <th>
                    Article
                </th>
                <th>
                    Quantité initiale
                </th>
                <th>
                    Quantité restante
                </th>
                <th>
                    Prix Unitaire
                </th>
                <th>
                    Montant
                </th>
            </thead>
            <tbody>
                @foreach(Stock stock in ViewBag.etatStock.listeStock){
                    <tr>
                        <td>
                            @stock.Article.idArticle
                        </td>
                        <td class="nombre-formate">
                            @stock.quantiteInitiale
                        </td>
                        <td class="nombre-formate">
                            @stock.reste
                        </td>
                        <td class="nombre-formate">
                            @stock.prixUnitaire
                        </td>
                        <td class="nombre-formate">
                            @stock.montant
                        </td>
                    </tr>
                }
                <tr>
                    <td class="no-border">

                    </td>
                    <td class="no-border"></td>
                    <td class="no-border"></td>

                    <td class="bold"style="text-align: right;">Montant total</td>
                    <td class="bold nombre-formate">@ViewBag.etatStock.montant</td>
                </tr>
            </tbody>
        </table>
      </div>
    </div>
</div>
<script>
     document.addEventListener("DOMContentLoaded", function() {
      var elements = document.getElementsByClassName("nombre-formate");
      for (var i = 0; i < elements.length; i++) {
        elements[i].textContent = formatNombre(elements[i].textContent);
      }
    });

    function formatNombre(nombre) {
      return parseFloat(nombre).toLocaleString();
    }
</script>